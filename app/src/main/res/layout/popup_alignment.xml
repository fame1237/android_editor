<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:bl_arrowDirection="bottom"
    app:bl_arrowHeight="12dp"
    app:bl_arrowWidth="16dp"
    app:bl_bubbleColor="@color/grey"
    app:bl_cornersRadius="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alignLeft"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_align_left" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d9d9d9" />

        <ImageView
            android:id="@+id/alignCenter"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_align_center" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d9d9d9" />

        <ImageView
            android:id="@+id/alignRight"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_align_right" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d9d9d9" />

        <ImageView
            android:id="@+id/indent"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_text_indent" />
    </LinearLayout>

</com.daasuu.bl.BubbleLayout>